
                                                        Reversing an array
                                                     **   WITHOUT USING SPACE  **

#include<bits/stdc++.h>
using namespace std;

int main()
{
    int a[5] = {1,2,3,4,5};
    
    int l = 0;
    int r = 4;
    while(l < r)
     {

        // Swap a[l] and a[r]
        int temp = a[r];
        a[r] = a[l];
        a[l] = temp;

      }

    for(int i = 0;i<5;i++)
    {
        cout << a[i] << " ";
    }
}


        
                                                reversing an array
                                              **  BY USING SPACE  **

#include<bits/stdc++.h>
using namespace std;

int main()
{
    int a[5] = {1,2,3,4,5};
    // output 5 4 3 2 1

    int b[5];

    int j = 0; // traverse an array b

    // to traverse an array a
    for(int i = 4;i>0;i--)
    {
        b[j] = a[i];
        j = j + 1;
    }

    for(int i = 0;i<5;i++)
    {
        cout << b[i] << "  ";
    }

}
        
    
    
